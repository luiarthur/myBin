# Apperance
export CLICOLOR=1
# Comment if not using redmagick
export TERM=xterm-256color

export LSCOLORS=ExFxBxDxCxegedabagacad
alias ls='ls -GFh'

# Interactive commands for not overwriting files
alias mv="/bin/mv -i"
alias cp="/bin/cp -i"
alias rm="/bin/rm -i"

# Alias
alias dir="ls -hla"
alias taro="tar -zxvf"
alias tma="tmux attach -t"

# Set-up prompt
PS1="\h:\W$ "

# Default Editor
export EDITOR=vim

# Search Paths
export PATH=~/bin:$PATH
export PATH=$HOME/programs/homebrew/bin:$PATH

# MacVim
alias vi="mvim -v"
alias vim="mvim -v"


