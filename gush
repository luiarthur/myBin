#!/bin/bash

git add .
git commit -m 'yes'
git push

source ~/.bashColors

sizeOfDir=$( echo `du -sh` | cut -d " " -f1 )
sizeOfRepo=$( git count-objects -vH | grep 'size-pack' | cut -d' ' -f2- | sed 's/i|B//g')

printf "${BLUE}Size of dir: $sizeOfDir\n"
printf "Size of Repo: $sizeOfRepo\n"
printf "${ORANGE}$(date)${NC}\n"

