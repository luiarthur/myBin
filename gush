#!/bin/bash

git add .
git commit -m 'yes'
git push

source ~/.bashColors

sizeOfDir=$( echo `du -sh git rev-parse --show-toplevel ` | cut -d " " -f1 )
sizeOfRepo=$( git count-objects -vH | grep 'size-pack' | sed -r 's/\.([0-9]+)//g' | cut -d' ' -f2- | sed 's/[iB\ ]//g' )

printf "${BLUE}Size of dir:  $sizeOfDir\n"
printf "Size of repo: $sizeOfRepo\n"
printf "${ORANGE}$(date)${NC}\n"

